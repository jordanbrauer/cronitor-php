{
  "name": "jordanbrauer/cronitor-sdk",
  "description": "A fully featured PHP SDK for the cron job monitoring service, Cronitor.io",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Jordan Brauer",
      "email": "jbrauer.inc@gmail.com"
    }
  ],
  "scripts": {
    "test": "phpunit --configuration='./phpunit.xml' --test-suffix='.spec.php' --color=always ./tests/",
    "coverage": "phpunit --coverage-text --configuration='./phpunit.xml' --test-suffix='.spec.php' --color=always ./tests/"
  },
  "require": {
    "php": ">=7.0",
    "guzzlehttp/guzzle": "^6.3",
    "symfony/serializer": "^3.4",
    "symfony/property-access": "^3.4",
    "symfony/property-info": "^3.4",
    "symfony/options-resolver": "^3.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "symfony/var-dumper": "^3.4"
  },
  "autoload": {
    "psr-4": {
      "Cronitor\\": "src/Cronitor"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cronitor\\Tests\\": "tests"
    }
  }
}
